<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="coinDepositScreen"
            type="crypto.base.baseexchange.binders.CoinDepositBinder" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/walletBackground">
        <include
            android:id="@+id/layout_header"
            layout="@layout/layout_wallet_header" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/headerColor"
            android:padding="@dimen/dimen10dp">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="end|center_vertical">
                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="end"
                    android:padding="@dimen/dimen5dp"/>
            </FrameLayout>
            <TextView
                android:id="@+id/tv_coinName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="start|center_vertical"
                android:textSize="16sp"
                android:textColor="@color/iconColor"
                android:fontFamily="@font/gotham_rounded_light"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/dimen10dp"
            android:layout_marginTop="@dimen/dimen50dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/gotham_rounded_light"
            android:visibility="gone"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_headerMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/dimen20dp"
                android:padding="@dimen/dimen10dp"
                android:text="@string/msg_copyAddress"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/gotham_rounded_light"/>
            <ImageView
                android:id="@+id/iv_qrCode"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:layout_constraintTop_toBottomOf="@id/tv_headerMsg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dimen10dp"
                android:background="@color/iconColor"/>
            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/iv_qrCode"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/dimen10dp"
                android:padding="@dimen/dimen10dp">
                <TextView
                    android:id="@+id/tv_address"
                    style="@style/SmallTextTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="3"
                    android:textAlignment="center"
                    android:padding="@dimen/dimen5dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gotham_rounded_medium"/>
                <ImageView
                    android:id="@+id/iv_copy"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="0"
                    android:src="@drawable/copy"
                    android:layout_gravity="center_horizontal|top"
                    android:padding="@dimen/dimen5dp"
                    android:tint="@color/iconColor"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/frame_shareAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/ll_address"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dimen50dp"
                android:layout_gravity="bottom"
                android:background="@color/tradeBuyColor"
                android:paddingTop="@dimen/dimen10dp"
                android:paddingBottom="@dimen/dimen10dp"
                android:paddingStart="@dimen/dimen20dp"
                android:paddingEnd="@dimen/dimen20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_shareAddress"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/gotham_rounded_medium"/>
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>
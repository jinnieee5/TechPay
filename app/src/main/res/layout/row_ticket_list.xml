<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_walletbalancelist_background"
    android:paddingStart="@dimen/dimen10dp"
    android:paddingEnd="@dimen/dimen10dp"
    android:paddingTop="@dimen/dimen10dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_ticketImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:civ_border_color="@color/transparent"
        app:civ_border_width="0dp"
        android:background="@drawable/shape_circle_white"
        android:src="@drawable/ticket"
        android:padding="@dimen/dimen5dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_ticketPriorityColor"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintTop_toTopOf="@id/iv_ticketImage"
        app:layout_constraintStart_toStartOf="@id/tv_priority"
        app:layout_constraintEnd_toEndOf="@id/tv_priority"
        app:civ_border_color="@color/transparent"
        app:civ_border_width="0dp"
        android:background="@drawable/shape_priority_medium"
        android:padding="2dp"/>
    <TextView
        android:id="@+id/tv_priority"
        style="@style/SmallTextTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_ticketPriorityColor"
        android:text="LOW"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:fontFamily="@font/gotham_rounded_medium"
        android:layout_marginTop="@dimen/dimen5dp"/>
    <LinearLayout
        android:id="@+id/ll_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/dimen10dp"
        app:layout_constraintTop_toTopOf="@id/iv_ticketImage"
        app:layout_constraintStart_toEndOf="@id/iv_ticketImage">
        <TextView
            android:id="@+id/tv_ticketNo"
            style="@style/SmallTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#1234567"
            android:paddingEnd="@dimen/dimen5dp"
            android:textSize="12sp"
            android:textColor="@color/iconColor"
            android:fontFamily="@font/gotham_rounded_medium"/>
        <TextView
            style="@style/SmallTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:paddingEnd="@dimen/dimen5dp"
            android:textSize="12sp"
            android:textColor="@color/iconColor"
            android:fontFamily="@font/gotham_rounded_medium"/>
        <TextView
            android:id="@+id/tv_ticketStatus"
            style="@style/SmallTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Un-attended"
            android:textSize="12sp"
            android:textColor="@color/iconColor"
            android:paddingStart="@dimen/dimen5dp"
            android:fontFamily="@font/gotham_rounded_medium"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_subject"
        style="@style/HeaderTextTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/ll_ticket"
        app:layout_constraintTop_toBottomOf="@id/ll_ticket"
        android:text="Bitcoin Exchange Issue"
        android:fontFamily="@font/gotham_rounded_light"
        android:textSize="16sp"
        android:textColor="@color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>
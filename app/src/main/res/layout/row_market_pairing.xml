<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dimen10dp"
    android:background="@drawable/shape_walletbalancelist_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0">
            <TextView
                android:id="@+id/tv_secondCoinName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="ETH"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/gotham_rounded_light"/>
            <TextView
                android:id="@+id/tv_firstCoinName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tv_secondCoinName"
                app:layout_constraintBottom_toBottomOf="@id/tv_secondCoinName"
                app:layout_constraintStart_toEndOf="@id/tv_secondCoinName"
                android:text=" / BTC"
                android:textSize="12sp"
                android:textColor="@color/iconColor"
                android:fontFamily="@font/gotham_rounded_light"/>
            <TextView
                android:id="@+id/tv_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_secondCoinName"
                app:layout_constraintStart_toStartOf="@id/tv_secondCoinName"
                android:text="Vol 11,604"
                android:textSize="12sp"
                android:textColor="@color/iconColor"
                android:fontFamily="@font/gotham_rounded_light"
                android:paddingEnd="2dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_lastPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="0.030115"
                android:textSize="16sp"
                android:textColor="@color/tradeIconColor"
                android:fontFamily="@font/gotham_rounded_medium"/>
            <TextView
                android:id="@+id/tv_lastPriceInUsd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_lastPrice"
                app:layout_constraintStart_toStartOf="@id/tv_lastPrice"
                android:text="$179.05"
                android:textSize="12sp"
                android:textColor="@color/iconColor"
                android:fontFamily="@font/gotham_rounded_light"
                android:paddingEnd="2dp"
                android:visibility="gone"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_weight="0">
            <FrameLayout
                android:id="@+id/frame_chg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/transparent"
                android:paddingTop="@dimen/dimen5dp"
                android:paddingBottom="@dimen/dimen5dp"
                android:paddingStart="@dimen/dimen10dp"
                android:paddingEnd="@dimen/dimen5dp">
                <TextView
                    android:id="@+id/tv_24Chg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+6.59%"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gotham_rounded_medium"/>
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>
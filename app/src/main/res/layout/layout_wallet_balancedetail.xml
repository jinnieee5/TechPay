<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="walletBalanceDetailScreen"
            type="crypto.base.baseexchange.binders.WalletBalanceDetailBinder" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/walletBackground">
        <LinearLayout
            android:id="@+id/ll_content"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ll_buttons"
            android:background="@color/walletBackground">
            <include
                android:id="@+id/layout_walletHeader"
                layout="@layout/layout_wallet_header"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen30dp"
                android:background="@color/headerColor">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <ImageView
                        android:id="@+id/iv_logo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/default_coin"
                        android:padding="@dimen/dimen5dp"/>

                    <TextView
                        android:id="@+id/tv_coinCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/gotham_rounded_medium"
                        android:paddingStart="@dimen/dimen10dp"
                        android:paddingTop="@dimen/dimen5dp"
                        android:paddingEnd="@dimen/dimen10dp"
                        android:text="BTC"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iv_logo"
                        app:layout_constraintTop_toTopOf="@id/iv_logo" />
                    <TextView
                        android:id="@+id/tv_coinName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_coinCode"
                        app:layout_constraintStart_toStartOf="@id/tv_coinCode"
                        app:layout_constraintEnd_toEndOf="@id/tv_coinCode"
                        android:text="(Bitcoin)"
                        android:textSize="14sp"
                        android:textColor="@color/iconColor"
                        android:fontFamily="@font/gotham_rounded_light"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen10dp"
                android:layout_marginTop="@dimen/dimen20dp">

                <TextView
                    android:id="@+id/tv_totalHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:fontFamily="@font/gotham_rounded_light"
                    android:text="Total"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/tv_availableHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_totalHeader"
                    app:layout_constraintStart_toStartOf="@id/tv_totalHeader"
                    android:text="Available"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gotham_rounded_light"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:layout_marginBottom="@dimen/dimen5dp"/>
                <TextView
                    android:id="@+id/tv_inOrderHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_availableHeader"
                    app:layout_constraintStart_toStartOf="@id/tv_availableHeader"
                    android:text="In Order"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gotham_rounded_light"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:layout_marginBottom="@dimen/dimen5dp"/>
                <TextView
                    android:id="@+id/tv_totalValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_totalHeader"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="0.00000000"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gotham_rounded_light"/>
                <TextView
                    android:id="@+id/tv_availableValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_availableHeader"
                    app:layout_constraintTop_toBottomOf="@id/tv_totalValue"
                    app:layout_constraintEnd_toEndOf="@id/tv_totalValue"
                    android:text="0.00000000"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gotham_rounded_light"/>
                <TextView
                    android:id="@+id/tv_inOrderValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_inOrderHeader"
                    app:layout_constraintTop_toBottomOf="@id/tv_availableValue"
                    app:layout_constraintEnd_toEndOf="@id/tv_availableValue"
                    android:text="0.00000000"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gotham_rounded_light"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/iconColor"
                android:layout_marginStart="@dimen/dimen10dp"
                android:layout_marginEnd="@dimen/dimen10dp"
                android:layout_marginTop="@dimen/dimen20dp"
                android:layout_marginBottom="@dimen/dimen20dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen10dp">
                <TextView
                    android:id="@+id/tv_estUsdtHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Est. Value (USDT)"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gotham_rounded_light"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:layout_marginBottom="@dimen/dimen5dp"/>
                <TextView
                    android:id="@+id/tv_estBtcHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_estUsdtHeader"
                    app:layout_constraintStart_toStartOf="@id/tv_estUsdtHeader"
                    android:text="Est. Value (BTC)"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gotham_rounded_light"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:layout_marginBottom="@dimen/dimen5dp"/>
                <TextView
                    android:id="@+id/tv_changeHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_estBtcHeader"
                    app:layout_constraintStart_toStartOf="@id/tv_estBtcHeader"
                    android:text="Change %"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gotham_rounded_light"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:layout_marginBottom="@dimen/dimen5dp"/>
                <TextView
                    android:id="@+id/tv_estUsdtValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_estUsdtHeader"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="0.00000000"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gotham_rounded_light"/>
                <TextView
                    android:id="@+id/tv_estBtcValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_estBtcHeader"
                    app:layout_constraintTop_toBottomOf="@id/tv_estUsdtValue"
                    app:layout_constraintEnd_toEndOf="@id/tv_estUsdtValue"
                    android:text="$0.00"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gotham_rounded_light"/>
                <TextView
                    android:id="@+id/tv_changeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_changeHeader"
                    app:layout_constraintTop_toBottomOf="@id/tv_estBtcValue"
                    app:layout_constraintEnd_toEndOf="@id/tv_estBtcValue"
                    android:text="$0.00"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gotham_rounded_light"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/dimen5dp">
            <FrameLayout
                android:id="@+id/frame_deposit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/tradeBuyColor"
                android:layout_margin="@dimen/dimen5dp"
                android:elevation="@dimen/dimen10dp">
                <TextView
                    style="@style/SmallTextTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Deposit"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:padding="@dimen/dimen10dp"
                    android:fontFamily="@font/gotham_rounded_medium"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/frame_withdrawal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/tradeSellColor"
                android:layout_margin="@dimen/dimen5dp"
                android:elevation="@dimen/dimen10dp">
                <TextView
                    style="@style/SmallTextTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Withdrawal"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:padding="@dimen/dimen10dp"
                    android:fontFamily="@font/gotham_rounded_medium"/>
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>
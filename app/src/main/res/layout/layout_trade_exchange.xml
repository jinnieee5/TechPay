    <!--first coin total fee-->
    <TextView
        android:id="@+id/tv_totalFeeHeader"
        style="@style/SmallTextTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total :"
        android:textSize="12sp"
        android:textColor="@color/textColorLight"
        android:fontFamily="@font/gotham_rounded_medium"
        android:layout_marginTop="@dimen/dimen5dp"
        android:layout_marginBottom="2dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/frame_firstCoinTotalFee"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_rectanglefilled_normal">
            <EditText
                android:id="@+id/ed_firstCoinTotalFee"
                style="@style/EdittextBlankTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:editable="false"
                android:enabled="false"
                android:hint="0.00000000"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:paddingStart="@dimen/dimen5dp"
                android:paddingEnd="@dimen/dimen5dp"
                android:textColorHint="@color/textColorDark"
                android:fontFamily="@font/gotham_rounded_light"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/frame_firstCoinName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@color/themeDarkColor1">
            <TextView
                android:id="@+id/tv_firstCoinName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="USDT"
                android:textSize="12sp"
                android:textColor="@color/tradeIconColor"
                android:layout_margin="@dimen/dimen5dp"/>
        </FrameLayout>
    </LinearLayout>
    <!--time in force spinner-->
    <TextView
        style="@style/SmallTextTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time In Force :"
        android:textSize="12sp"
        android:textColor="@color/textColorLight"
        android:fontFamily="@font/gotham_rounded_medium"
        android:layout_marginTop="@dimen/dimen5dp"
        android:layout_marginBottom="2dp"/>
    <FrameLayout
        android:id="@+id/frame_timeInForceSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectanglefilled_normal">
        <Spinner
            android:id="@+id/spinner_timeInForce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:backgroundTint="@color/white" />
    </FrameLayout>
    <!--auto-close when profit-->
    <TextView
        style="@style/SmallTextTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autoclose when profit%"
        android:textSize="12sp"
        android:textColor="@color/textColorLight"
        android:fontFamily="@font/gotham_rounded_medium"
        android:layout_marginTop="@dimen/dimen5dp"
        android:layout_marginBottom="2dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/frame_autocloseProfit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_rectanglefilled_normal">
            <EditText
                android:id="@+id/ed_autocloseProfit"
                style="@style/EdittextBlankTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:hint="0.00 %"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:paddingStart="@dimen/dimen5dp"
                android:paddingEnd="@dimen/dimen5dp"
                android:textColorHint="@color/textColorDark"
                android:fontFamily="@font/gotham_rounded_light"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@color/themeDarkColor1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="autoclose"
                android:textSize="12sp"
                android:textColor="@color/tradeIconColor"
                android:layout_margin="@dimen/dimen5dp"/>
        </FrameLayout>
    </LinearLayout>
    <!--auto-close when loss-->
    <TextView
        style="@style/SmallTextTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autoclose when loss%"
        android:textSize="12sp"
        android:textColor="@color/textColorLight"
        android:fontFamily="@font/gotham_rounded_medium"
        android:layout_marginTop="@dimen/dimen5dp"
        android:layout_marginBottom="2dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/frame_autocloseLoss"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_rectanglefilled_normal">
            <EditText
                android:id="@+id/ed_autocloseLoss"
                style="@style/EdittextBlankTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:hint="0.00 %"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:paddingStart="@dimen/dimen5dp"
                android:paddingEnd="@dimen/dimen5dp"
                android:textColorHint="@color/textColorDark"
                android:fontFamily="@font/gotham_rounded_light"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@color/themeDarkColor1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="autoclose"
                android:textSize="12sp"
                android:textColor="@color/tradeIconColor"
                android:layout_margin="@dimen/dimen5dp"/>
        </FrameLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/frame_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tradeBuyColor"
        android:layout_marginTop="@dimen/dimen10dp">
        <TextView
            android:id="@+id/tv_button"
            style="@style/SmallTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Buy"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:padding="5dp"
            android:fontFamily="@font/gotham_rounded_medium"/>
    </FrameLayout>
</LinearLayout>
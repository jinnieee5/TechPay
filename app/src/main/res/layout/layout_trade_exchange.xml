        android:textSize="12sp"
        android:textColor="@color/textColorLight"
        android:fontFamily="@font/gotham_rounded_medium"
        android:layout_marginTop="@dimen/dimen5dp"
        android:layout_marginBottom="@dimen/dimen5dp"/>

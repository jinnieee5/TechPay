<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_walletbalancelist_background"
    android:padding="@dimen/dimen10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Order: "
            android:textSize="14sp"
            android:textColor="@color/deepYellow"
            android:fontFamily="@font/gotham_rounded_medium"/>
        <TextView
            android:id="@+id/tv_orderNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PAYIZA67953814"
            android:textSize="14sp"
            android:textColor="@color/iconColor"
            android:fontFamily="@font/gotham_rounded_medium"
            android:layout_marginStart="@dimen/dimen5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_coinName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="center"
            android:text="BTC-"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/gotham_rounded_light"
            android:layout_marginEnd="@dimen/dimen5dp"/>
        <TextView
            android:id="@+id/tv_walletAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="3MELaHyjc1Yqu8t2zASz2AQQckdMHuLKwH"
            android:singleLine="true"
            android:textSize="12sp"
            android:textColor="@color/iconColor"
            android:fontFamily="@font/gotham_rounded_medium"/>
        <ImageView
            android:id="@+id/iv_copyWalletAddress"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="0"
            android:layout_gravity="center"
            android:src="@drawable/copy"
            android:tint="@color/iconColor"
            android:padding="@dimen/dimen5dp"
            android:layout_marginStart="@dimen/dimen5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="start">
            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount - 0.01000000"
                android:layout_gravity="start"
                android:textSize="12sp"
                android:textColor="@color/iconColor"
                android:fontFamily="@font/gotham_rounded_light"/>
            <TextView
                android:id="@+id/tv_transactionFees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction Fees - 0.00010000"
                android:layout_gravity="start"
                android:textSize="12sp"
                android:textColor="@color/iconColor"
                android:fontFamily="@font/gotham_rounded_light"/>
            <TextView
                android:id="@+id/tv_netPayable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Net Payable - 0.00990000"
                android:layout_gravity="start"
                android:textSize="12sp"
                android:textColor="@color/iconColor"
                android:fontFamily="@font/gotham_rounded_light"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical"
            android:layout_gravity="bottom">
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:text="Waiting for mail action"
                android:textSize="14sp"
                android:textColor="@color/deepRed"
                android:fontFamily="@font/gotham_rounded_medium"/>
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:text="(4-10-2019 2:32:02)"
                android:textSize="12sp"
                android:textColor="@color/iconColor"
                android:fontFamily="@font/gotham_rounded_light"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_margin="8dp"
    android:background="@color/transparent">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/tradeBackground"
        app:cardCornerRadius="@dimen/dimen15dp"
        app:contentPaddingRight="@dimen/dimen20dp"
        app:contentPaddingLeft="@dimen/dimen20dp"
        app:contentPaddingTop="@dimen/dimen5dp"
        app:contentPaddingBottom="@dimen/dimen5dp">
        <TextView
            android:id="@+id/tv_coinName"
            style="@style/HeaderTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/gotham_rounded_medium"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>
<?xml version="1.0" encoding="UTF-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/headerColor"/>
            <padding
                android:top="0dp"
                android:right="10dp"
                android:left="10dp"
                android:bottom="0dp">
            </padding>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/headerColor"/>
            <padding
                android:top="0dp"
                android:right="10dp"
                android:left="10dp"
                android:bottom="0dp">
            </padding>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/headerColor"/>
            <padding
                android:top="0dp"
                android:right="10dp"
                android:left="10dp"
                android:bottom="0dp">
            </padding>
        </shape>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="1dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="1dp">
        <shape
            android:shape="rectangle">
            <stroke
                android:width="0.5dp"
                android:color="@color/textColor"
                android:dashWidth="5px"
                android:dashGap="5px"/>
            <corners
                android:radius="0dp" />
            <solid
                android:color="@color/transparent"/>
        </shape>
    </item>
</layer-list>